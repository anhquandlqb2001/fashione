<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="vn.quanprolazer.fashione.ui.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_productFragment"
            app:destination="@id/productFragment" />
        <action
            android:id="@+id/action_homeFragment_to_searchResultFragment"
            app:destination="@id/searchResultFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
    </fragment>
    <fragment
        android:id="@+id/productFragment"
        android:name="vn.quanprolazer.fashione.ui.ProductFragment"
        android:label="ProductFragment"
        tools:layout="@layout/fragment_product_detail">

        <argument
            android:name="product"
            app:argType="vn.quanprolazer.fashione.domain.model.Product" />
        <action
            android:id="@+id/action_productFragment_to_bottomSheetProductVariantFragment"
            app:destination="@id/bottomSheetProductVariantFragment" />

    </fragment>
    <fragment
        android:id="@+id/searchResultFragment"
        android:name="vn.quanprolazer.fashione.ui.SearchResultFragment"
        android:label="SearchResultFragment"
        tools:layout="@layout/fragment_search_result">
        <argument
            android:name="category"
            app:argType="vn.quanprolazer.fashione.domain.model.Category"
            app:nullable="true"/>
        <argument
            android:name="query"
            app:argType="string"
            app:nullable="true"/>
        <action
            android:id="@+id/action_searchResultFragment_to_productFragment"
            app:destination="@id/productFragment" />


    </fragment>
    <fragment
        android:id="@+id/bottomSheetProductVariantFragment"
        android:name="vn.quanprolazer.fashione.ui.BottomSheetProductVariantFragment"
        android:label="BottomSheetProductVariantFragment" />

</navigation>