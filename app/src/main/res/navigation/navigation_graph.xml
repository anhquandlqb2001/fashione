<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="vn.quanprolazer.fashione.ui.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_productFragment"
            app:destination="@id/productFragment" />
        <action
            android:id="@+id/action_homeFragment_to_searchResultFragment"
            app:destination="@id/searchResultFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_homeFragment_to_cartFragment"
            app:destination="@id/cartFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/productFragment"
        android:name="vn.quanprolazer.fashione.ui.ProductFragment"
        tools:layout="@layout/fragment_product_detail">

        <argument
            android:name="product"
            app:argType="vn.quanprolazer.fashione.data.domain.model.Product" />
        <action
            android:id="@+id/action_productFragment_to_bottomSheetProductVariantFragment"
            app:destination="@id/bottomSheetProductVariantFragment" />

    </fragment>
    <fragment
        android:id="@+id/searchResultFragment"
        android:name="vn.quanprolazer.fashione.ui.SearchResultFragment"
        tools:layout="@layout/fragment_search_result">
        <argument
            android:name="category"
            app:argType="vn.quanprolazer.fashione.data.domain.model.Category"
            app:nullable="true" />
        <argument
            android:name="query"
            app:argType="string"
            app:nullable="true" />
        <action
            android:id="@+id/action_searchResultFragment_to_productFragment"
            app:destination="@id/productFragment" />


    </fragment>

    <dialog
        android:id="@+id/bottomSheetProductVariantFragment"
        android:name="vn.quanprolazer.fashione.ui.BottomSheetProductVariantFragment">
        <argument
            android:name="product"
            app:argType="vn.quanprolazer.fashione.data.domain.model.Product" />
    </dialog>
    <fragment
        android:id="@+id/cartFragment"
        android:name="vn.quanprolazer.fashione.ui.CartFragment">
        <action
            android:id="@+id/action_cartFragment_to_checkoutFragment"
            app:destination="@id/checkoutFragment" />
    </fragment>
    <fragment
        android:id="@+id/checkoutFragment"
        android:name="vn.quanprolazer.fashione.ui.CheckoutFragment">
        <argument
            android:name="checkoutItems"
            app:argType="vn.quanprolazer.fashione.data.domain.model.CheckoutItem[]" />
        <action
            android:id="@+id/action_checkoutFragment_to_pickupAddressFragment"
            app:destination="@id/pickupAddressFragment" />
        <action
            android:id="@+id/action_checkoutFragment_to_orderSuccessFragment"
            app:destination="@id/orderSuccessFragment" />

    </fragment>
    <fragment
        android:id="@+id/pickupAddressFragment"
        android:name="vn.quanprolazer.fashione.ui.PickupAddressFragment">
        <action
            android:id="@+id/action_pickupAddressFragment_to_addPickupAddressFragment"
            app:destination="@id/addPickupAddressFragment" />
    </fragment>
    <fragment
        android:id="@+id/addPickupAddressFragment"
        android:name="vn.quanprolazer.fashione.ui.AddPickupAddressFragment"
        android:label="AddPickupAddressFragment" />
    <fragment
        android:id="@+id/orderSuccessFragment"
        android:name="vn.quanprolazer.fashione.ui.OrderSuccessFragment"
        android:label="fragment_order_success"
        tools:layout="@layout/fragment_order_success" >
        <action
            android:id="@+id/action_orderSuccessFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/personalFragment"
        android:name="vn.quanprolazer.fashione.ui.PersonalFragment"
        android:label="PersonalFragment" >
        <action
            android:id="@+id/action_personalFragment_to_purchaseMenuFragment"
            app:destination="@id/purchaseMenuFragment" />
    </fragment>
    <fragment
        android:id="@+id/purchaseMenuFragment"
        android:name="vn.quanprolazer.fashione.ui.PurchaseMenuFragment"
        android:label="PurchaseMenuFragment" />


</navigation>